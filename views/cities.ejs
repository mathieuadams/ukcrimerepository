    <link rel="stylesheet" href="/css/styles.css">
    <style>
        .browse-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 3rem 2rem;
        }
        
        .browse-header {
            text-align: center;
            margin-bottom: 3rem;
            padding-bottom: 2rem;
            border-bottom: 1px solid #e2e8f0;
        }
        
        .browse-header h1 {
            font-size: 2rem;
            color: #1e293b;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }
        
        .browse-subtitle {
            color: #64748b;
            font-size: 1rem;
        }
        
        .cities-list {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 1.5rem 3rem;
            padding: 0;
            margin: 0;
            list-style: none;
        }
        
        .city-link {
            color: #475569;
            text-decoration: none;
            font-size: 1rem;
            transition: color 0.2s ease;
            display: block;
            padding: 0.5rem 0;
        }
        
        .city-link:hover {
            color: #3b82f6;
            text-decoration: underline;
        }
        
        .featured-cities {
            margin-bottom: 3rem;
        }
        
        .section-title {
            font-size: 1.25rem;
            color: #1e293b;
            font-weight: 600;
            margin-bottom: 1.5rem;
            padding-bottom: 0.5rem;
            border-bottom: 2px solid #3b82f6;
        }
        
        .popular-badge {
            display: inline-block;
            background: #fef3c7;
            color: #92400e;
            font-size: 0.75rem;
            padding: 0.125rem 0.5rem;
            border-radius: 12px;
            margin-left: 0.5rem;
            font-weight: 500;
        }
        
        @media (max-width: 768px) {
            .cities-list {
                grid-template-columns: 1fr;
            }
        }
        
        @media (min-width: 769px) and (max-width: 1024px) {
            .cities-list {
                grid-template-columns: repeat(2, 1fr);
            }
        }
    </style>
</head>
