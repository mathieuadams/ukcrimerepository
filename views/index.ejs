                    </div>
                    
                    <!-- Quick Location Buttons -->
                    <div class="quick-locations">
                        <span class="quick-label">Popular locations:</span>
                        <div class="quick-buttons">
                            <button class="quick-btn" data-coords="51.5074,-0.1278" data-name="London">
                                <i class="fas fa-building"></i> London
                            </button>
                            <button class="quick-btn" data-coords="53.4808,-2.2426" data-name="Manchester">
                                <i class="fas fa-industry"></i> Manchester
                            </button>
                            <button class="quick-btn" data-coords="52.4862,-1.8904" data-name="Birmingham">
                                <i class="fas fa-city"></i> Birmingham
                            </button>
                            <button class="quick-btn" data-coords="53.8008,-1.5491" data-name="Leeds">
                                <i class="fas fa-university"></i> Leeds
                            </button>
